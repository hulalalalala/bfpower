/**index.wxss**/

/* 首页 */

/* Tab */
.top-nav {
  display: flex;
  flex-direction: row;
  padding: 30rpx;
}

.top-nav-picker {
  color: #4395ff
}

.top-tab {
  width: 100%;
}

/* 货物展示区 */
.show-comms {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.show-comms-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 500rpx;
  padding-bottom: 40rpx;
}

.show-comms-item-clum {
  display: flex;
  flex-direction: column;
  width: 50%;
  padding-bottom: 20rpx;
  justify-content: center;
  align-items: center;
}
.show-comms-item-clum:nth-child(1) {
  padding-left: 60rpx;
  padding-right: 20rpx;
}
.show-comms-item-clum:nth-child(2) {
  padding-right: 60rpx;
  padding-left: 20rpx;
}
.show-comms-item-clum p {
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.show-comms-item-clum-btn {
  width: 80%;
  border: 1px solid black;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  border-radius: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}
.show-comms-item-clum-btn div {
  width: 50%;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.show-comms-item-clum-btn div:nth-child(2){
  background-color: black;
  color: #ffffff;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  border: 1px solid #000000;
}